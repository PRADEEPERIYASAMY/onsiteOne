<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:paddingTop="80dp"
    android:paddingBottom="80dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp"
    android:background="#38B6FF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="50"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:background="@drawable/button_back"
            android:layout_marginBottom="20dp">
            <com.example.onsiteone.clock.TimerView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:id="@+id/time_view"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:weightSum="40"
            android:layout_marginBottom="20dp">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="19"
                android:text="reset"
                android:textAllCaps="false"
                android:background="@drawable/buttonback3">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:src="@drawable/stop"
                    android:id="@+id/reset_img"
                    />
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/reset"
                    android:layout_weight="1"
                    android:text="reset"
                    android:textColor="@android:color/transparent"
                    android:background="@android:color/transparent"
                    android:textAllCaps="false"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"/>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="19"
                android:text="reset"
                android:textAllCaps="false"
                android:background="@drawable/buttonback4"
                android:paddingRight="10dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:src="@drawable/play"
                    android:id="@+id/play_img"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/play"
                    android:layout_weight="1"
                    android:text="play"
                    android:textColor="@android:color/transparent"
                    android:background="@android:color/transparent"
                    android:textAllCaps="false"
                    />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="13"
            android:weightSum="17"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:background="@drawable/buttonback6">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="0"
                android:textSize="45sp"
                android:gravity="center"
                android:textAlignment="center"
                android:id="@+id/hours"
                android:textColor="@android:color/black"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text=":"
                android:textSize="60sp"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@android:color/black"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="0"
                android:textSize="45sp"
                android:gravity="center"
                android:textAlignment="center"
                android:id="@+id/minutes"
                android:textColor="@android:color/black"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text=":"
                android:textSize="60sp"
                android:gravity="center"
                android:textAlignment="center"
                android:textColor="@android:color/black"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:text="0"
                android:textSize="45sp"
                android:gravity="center"
                android:textAlignment="center"
                android:id="@+id/seconds"
                android:textColor="@android:color/black"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>